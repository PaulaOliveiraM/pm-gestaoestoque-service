{
  "swagger": "2.0",
  "info": {
    "title": "Serviço de Gestão de Estoques",
    "description": "API de gerenciamento de entregas armazenadas nos estoques",
    "version": "1.0"
  },
  "host": "localhost:3001",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/api/v1/entrega/entrada": {
      "post": {
        "description": "Permite dar entrada em uma determinada entrega no estoque",
        "operationId": "iniciarEntrega",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados da entrega que deverá ser enviada pela transportadora",
            "required": true,
            "schema": { "$ref": "#/definitions/EntradaEntrega" }
          }
        ],
        "responses": {
          "200": {
            "schema": { "$ref": "#/definitions/Entrega" }
          },
          "400": {
            "description": "Error"
          },
          "500": {
            "description": "Error: Internal Server Error"
          }
        }
      }
    },
    "/api/v1/entrega/{codigoEntrega}": {
      "get": {
        "summary": "Localiza uma entrega pelo seu código",
        "operationId": "consultarEntrega",
        "produces": ["application/json"],
        "parameters": [
          {
            "name": "codigoEntrega",
            "in": "path",
            "description": "Id da entrega a ser consultada",
            "required": true,
            "type": "number"
          }
        ],
        "responses": {
          "200": {
            "description": "Entrega encontrada com sucesso",
            "schema": { "$ref": "#/definitions/Entrega" }
          },
          "404": {
            "description": "Entrega não encontrada"
          },
          "503": {
            "description": "Erro interno"
          }
        }
      }
    },
    "/api/v1/entrega/baixa": {
      "post": {
        "description": "Permite informar a baixa de um produto que acabou de ser entregue ao cliente final.",
        "operationId": "baixarEntrega",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Dados da entrega realizada",
            "required": true,
            "schema": { "$ref": "#/definitions/BaixaEntrega" }
          }
        ],
        "responses": {
          "200": {
            "schema": { "$ref": "#/definitions/Entrega" }
          },
          "400": {
            "description": "Error"
          },
          "500": {
            "description": "Error: Internal Server Error"
          }
        }
      }
    }
  },
  "definitions": {
    "Rastreio": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "dataRastreio": {
          "type": "date"
        },
        "codigoRastreio": {
          "type": "string"
        },
        "entrega": {
          "type": "object",
          "schema": { "$ref": "#/definitions/Entrega" }
        }
      }
    },
    "Etapa": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "etapa": {
          "type": "string",
          "enum": [
            "entregaIniciada",
            "entregaFinalizada",
            "entregaACaminho",
            "entregaDevolvida",
            "entregaExtraviada"
          ]
        },
        "usuarioResponsavel": {
          "type": "string"
        },
        "data": {
          "type": "date"
        },
        "latitude": {
          "type": "number"
        },
        "longitude": {
          "type": "number"
        },
        "entrega": {
          "type": "object",
          "schema": { "$ref": "#/definitions/Entrega" }
        },
        "observacoes": {
          "type": "string"
        }
      }
    },
    "BaixaEntrega": {
      "type": "object",
      "properties": {
        "codigoEntrega": {
          "type": "number",
          "description": "Id da entrega cuja baixa deve ser registrada"
        },
        "usuario": {
          "type": "string",
          "description": "Usuário quem realizou a entrega"
        },
        "latitude": {
          "type": "number",
          "description": "Latitude do local exato onde a entrega foi registrada"
        },
        "longitude": {
          "type": "number",
          "description": "Longitude do local exato onde a entrega foi registrada"
        },
        "observacao":{
          "type":"string"
        }
      }
    },
    "EntradaEntrega": {
      "type": "object",
      "properties": {
        "nomeDestinatario": {
          "type": "string"
        },
        "enderecoDestinatario": {
          "type": "string"
        },
        "produto": {
          "type": "string"
        },
        "cliente": {
          "type": "object",
          "properties": {
            "id": {
              "type": "number",
              "default": 1
            }
          }
        },
        "armazem": {
          "type": "object",
          "properties": {
            "id": {
              "type": "number",
              "default": 1
            }
          }
        }
      }
    },
    "Armazem": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "nome": {
          "type": "string"
        },
        "endereco": {
          "type": "string"
        },
        "bairro": {
          "type": "string"
        },
        "cidade": {
          "type": "string"
        },
        "estado": {
          "type": "string"
        },
        "cep": {
          "type": "string"
        },
        "telefone": {
          "type": "string"
        },
        "entregas": {
          "type": "array",
          "items":{
            "$ref":"#/definitions/Entrega"
          }
        }
      }
    },
    "Cliente": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "cnpj": {
          "type": "string"
        },
        "ie": {
          "type": "string"
        },
        "nome": {
          "type": "string"
        },
        "endereco": {
          "type": "string"
        },
        "numero": {
          "type": "number"
        },
        "complemento": {
          "type": "string"
        },
        "bairro": {
          "type": "string"
        },
        "cidade": {
          "type": "string"
        },
        "estado": {
          "type": "string"
        },
        "cep": {
          "type": "string"
        }
      }
    },
    "Entrega": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "cliente": {
          "$ref": "#/definitions/Cliente"
        },
        "armazem": {
          "$ref": "#/definitions/Armazem"
        },
        "rastreios": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Rastreio"
          }
        },
        "etapas": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Etapa"
          }
        },
        "nomeDestinatario": {
          "type": "string"
        },
        "enderecoDestinatario": {
          "type": "string"
        },
        "status": {
          "type": "string"
        },
        "produto": {
          "type": "string"
        },
        "dataPrevistaEntrega": {
          "type": "date"
        },
        "dataEntrega": {
          "type": "date"
        }
      }
    }
  }
}
